---
import TestimonialHeader from "./testimonials/TestimonialHeader.astro";
import TestimonialCard from "./testimonials/TestimonialCard.astro";
import { testimonialsData } from "../../data/shadow-studio/testimonials";
---

<section
  id="testimonials"
  class="w-full bg-primarybg py-20 md:py-32 px-4 sm:px-6 lg:px-8"
>
  <div class="mx-auto w-full max-w-screen-2xl">
    <TestimonialHeader />
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 w-full justify-items-center content-center mx-auto"
    >
      {
        testimonialsData
          .slice(0, 3)
          .map((item, index) => (
            <TestimonialCard
              id={item.id}
              name={item.name}
              date={item.date}
              artist={item.artist}
              rating={item.rating}
              text={item.text}
              category={item.category}
              location={item.location}
              index={index}
            />
          ))
      }
    </div>
  </div>
</section>
