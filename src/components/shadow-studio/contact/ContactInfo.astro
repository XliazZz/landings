---
interface Props {
  studioInfo: {
    address: string;
    hours: { day: string; time: string }[];
    email: string;
    phone: string;
    mapLink: string;
  };
}

const { studioInfo } = Astro.props;
---

<div
  class="w-full lg:w-[50%] relative z-20 bg-primarybg flex flex-col justify-center p-8 md:p-16 lg:p-24 xl:p-32 border-b lg:border-b-0 lg:border-r border-white/5"
>
  <div class="reveal-contact relative z-10" style="--delay: 0ms">
    <span
      class="text-aux-secondary text-xs font-bold tracking-[0.3em] uppercase block mb-6"
    >
      Ubicación
    </span>
    <h2
      class="text-5xl lg:text-7xl font-black text-white tracking-tighter leading-[0.9] mb-12"
    >
      VISITA EL <br />
      <span
        class="text-transparent bg-clip-text bg-gradient-to-r from-secondary via-aux-primary to-secondary bg-[length:200%_auto] animate-shine"
      >
        SANTUARIO
      </span>
    </h2>
  </div>

  <div class="space-y-12">
    <div class="reveal-contact" style="--delay: 100ms">
      <h3
        class="text-xs font-bold text-gray-500 uppercase tracking-widest mb-4"
      >
        Encuéntranos
      </h3>
      <p class="text-xl lg:text-2xl text-white font-light leading-snug">
        {studioInfo.address}
        <br />
        <span class="text-gray-500">Barrio de las Artes, CABA</span>
      </p>
      <a
        href={studioInfo.mapLink}
        target="_blank"
        class="inline-flex items-center gap-3 mt-6 text-sm font-bold text-aux-secondary uppercase tracking-widest hover:text-white transition-colors group"
      >
        <span
          class="border-b border-aux-secondary/30 group-hover:border-white pb-1 transition-all"
          >Ver en Mapa</span
        >
        <svg
          class="w-4 h-4 transition-transform group-hover:translate-x-1"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
        >
      </a>
    </div>

    <div class="reveal-contact" style="--delay: 200ms">
      <h3
        class="text-xs font-bold text-gray-500 uppercase tracking-widest mb-4"
      >
        Horarios
      </h3>
      <ul class="space-y-2">
        {
          studioInfo.hours.map((item) => (
            <li class="flex justify-between items-center text-lg lg:text-xl font-light border-b border-white/5 pb-2 last:border-0 last:pb-0">
              <span class="text-gray-400">{item.day}</span>
              <span class="text-white">{item.time}</span>
            </li>
          ))
        }
      </ul>
    </div>

    <div class="reveal-contact" style="--delay: 300ms">
      <h3
        class="text-xs font-bold text-gray-500 uppercase tracking-widest mb-4"
      >
        Contacto
      </h3>
      <div class="flex flex-col gap-2 text-lg lg:text-xl font-light">
        <a
          href={`mailto:${studioInfo.email}`}
          class="text-white hover:text-aux-secondary transition-colors"
          >{studioInfo.email}</a
        >
        <a
          href={`tel:${studioInfo.phone}`}
          class="text-white hover:text-aux-secondary transition-colors"
          >{studioInfo.phone}</a
        >
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes shine {
    to {
      background-position: 200% center;
    }
  }
  .animate-shine {
    animation: shine 6s linear infinite;
  }
</style>
