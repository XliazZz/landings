---
import "../../../styles/animations.css";
---

<div
  id="specialties-section"
  class="relative flex flex-col items-center text-center mb-10 md:mb-16 lg:mb-20 max-w-4xl mx-auto px-4 overflow-hidden"
>
  <div
    class="reveal-on-scroll absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-full rounded-full pointer-events-none -z-10
           animate-[pulse-glow_6s_ease-in-out_infinite]"
  >
  </div>

  <div class="flex items-center gap-3 md:gap-6 mb-6 overflow-hidden">
    <span
      class="reveal-on-scroll w-8 md:w-16 h-px bg-linear-to-r from-transparent to-aux-secondary/50
             animate-[slideInLeft_0.8s_ease-out_0.2s_both]"
    ></span>

    <span
      class="reveal-on-scroll text-aux-secondary text-[10px] md:text-xs font-bold tracking-[0.35em] uppercase whitespace-nowrap
             animate-[fadeInUp_0.6s_ease-out_0.4s_both]"
    >
      Nuestras Especialidades
    </span>

    <span
      class="reveal-on-scroll w-8 md:w-16 h-px bg-linear-to-l from-transparent to-aux-secondary/50
             animate-[slideInRight_0.8s_ease-out_0.2s_both]"
    ></span>
  </div>

  <h2
    class="reveal-on-scroll font-aurora-title text-5xl sm:text-6xl md:text-7xl lg:text-8xl text-white uppercase leading-[0.9] tracking-tight mb-8 drop-shadow-xl
           animate-[fadeInUp_0.8s_ease-out_0.6s_both]"
  >
    Arte en <br class="md:hidden" />
    <span
      class="relative inline-block text-transparent bg-clip-text bg-linear-to-r from-aux-primary via-secondary to-primary italic font-medium
             animate-[gradientReveal_1.2s_ease-out_0.8s_both]"
    >
      Detalle

      <svg
        class="absolute -top-2 -right-6 md:-top-4 md:-right-10 w-6 h-6 md:w-10 md:h-10 text-aux-secondary opacity-80
               animate-[starTwinkle_2s_ease-in-out_1s_infinite,starRotate_10s_linear_infinite]"
        viewBox="0 0 24 24"
        fill="currentColor"
      >
        <path
          d="M12 2L14.4 9.6L22 12L14.4 14.4L12 22L9.6 14.4L2 12L9.6 9.6L12 2Z"
        ></path>
      </svg>
    </span>
  </h2>

  <div class="relative overflow-hidden">
    <p
      class="reveal-on-scroll font-aurora-body text-zinc-400 font-light text-base md:text-lg lg:text-xl max-w-2xl mx-auto leading-relaxed text-balance
             animate-[fadeInUp_0.8s_ease-out_1s_both]"
    >
      Cada pieza es un <span
        class="text-white font-medium relative inline-block after:absolute after:bottom-0 after:left-0 after:h-[1px] after:w-0 after:bg-white after:transition-all after:duration-500 hover:after:w-full"
        >diálogo íntimo</span
      > entre el artista y la piel. Ofrecemos experiencias únicas donde la técnica
      impecable y la creatividad convergen para crear legado.
    </p>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const observerOptions = {
      root: null,
      threshold: 0.2,
      rootMargin: "0px 0px -100px 0px",
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const animatedElements =
            entry.target.querySelectorAll(".reveal-on-scroll");

          animatedElements.forEach((el) => {
            el.classList.remove("reveal-on-scroll");
          });

          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    const section = document.getElementById("specialties-section");
    if (section) {
      observer.observe(section);
    }
  });
</script>
