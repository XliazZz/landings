<div
  id="preloader"
  class="fixed inset-0 z-[10000] bg-white dark:bg-gray-950 flex items-center justify-center transition-opacity duration-700 ease-out"
>
  <div class="flex flex-col items-center animate-pulse">
    <span
      class="text-6xl md:text-8xl font-serif italic text-gray-900 dark:text-white tracking-tighter"
    >
      Aurora
    </span>
    <span class="text-xs uppercase tracking-[0.4em] text-yellow-600 mt-2">
      Cargando Experiencia
    </span>
  </div>
</div>

<script>
  window.addEventListener("load", () => {
    const preloader = document.getElementById("preloader");
    if (preloader) {
      preloader.classList.add("opacity-0");

      setTimeout(() => {
        preloader.style.display = "none";
        preloader.remove();
      }, 700);
    }
  });
</script>
