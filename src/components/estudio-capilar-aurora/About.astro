<script>
  // Script minimalista para activar animaciones al scroll
  document.addEventListener("DOMContentLoaded", () => {
    const observerOptions = {
      root: null,
      rootMargin: "0px",
      threshold: 0.2, // Se activa cuando el 20% de la sección es visible
    };

    const observer = new IntersectionObserver((entries, observer) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          // Buscamos todos los elementos con la clase 'reveal-element' DENTRO del grupo visible
          const revealElements =
            entry.target.querySelectorAll(".reveal-element");

          revealElements.forEach((el) => {
            // Quitamos las clases que ocultan/desplazan el elemento
            el.classList.remove(
              "opacity-0",
              "translate-y-12",
              "translate-y-8",
              "translate-y-4",
              "translate-x-[-20px]",
              "scale-95"
            );
            // Añadimos las clases finales (opcional, pero Tailwind transition maneja el resto al quitar las anteriores)
            el.classList.add(
              "opacity-100",
              "translate-y-0",
              "translate-x-0",
              "scale-100"
            );
          });

          // Dejamos de observar este grupo una vez animado
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    // Observamos los contenedores padres (grupos)
    document.querySelectorAll(".reveal-group").forEach((group) => {
      observer.observe(group);
    });
  });
</script>
