<a
  class="relative z-50 group flex items-center gap-3 cursor-default"
  aria-label="Ir al inicio"
>
  <div class="relative w-8 h-8 flex items-center justify-center">
    <svg
      viewBox="0 0 24 24"
      fill="currentColor"
      class="w-full h-full transition-all duration-500 ease-out group-hover:rotate-45 group-hover:scale-110
             text-white
             group-data-[scrolled=true]/header:text-gray-900 dark:group-data-[scrolled=true]/header:text-white
             group-data-[menu-open=true]/header:text-gray-900 dark:group-data-[menu-open=true]/header:text-white"
    >
      <path d="M12 2L14.4 9.6L22 12L14.4 14.4L12 22L9.6 14.4L2 12L9.6 9.6L12 2Z"
      ></path>
    </svg>

    <div
      class="absolute inset-0 bg-white/30 blur-md rounded-full scale-0 group-hover:scale-150 transition-transform duration-500"
    >
    </div>
  </div>

  <div class="flex flex-col items-start justify-center">
    <span
      class="text-2xl md:text-3xl font-serif italic font-medium leading-none tracking-tight transition-colors duration-300
             text-white
             group-data-[scrolled=true]/header:text-gray-900 dark:group-data-[scrolled=true]/header:text-white
             group-data-[menu-open=true]/header:text-gray-900 dark:group-data-[menu-open=true]/header:text-white
             group-hover:text-yellow-600"
    >
      Aurora
    </span>

    <div class="flex items-center gap-2 mt-0.5">
      <span
        class="w-2 h-px bg-yellow-600/80 transition-all duration-300 group-hover:w-4"
      ></span>

      <span
        class="text-[0.6rem] tracking-[0.25em] uppercase font-bold leading-none transition-colors duration-300
               text-white/90
               group-data-[scrolled=true]/header:text-gray-600 dark:group-data-[scrolled=true]/header:text-white
               group-data-[menu-open=true]/header:text-gray-600 dark:group-data-[menu-open=true]/header:text-white"
      >
        Estudio
      </span>
    </div>
  </div>
</a>
