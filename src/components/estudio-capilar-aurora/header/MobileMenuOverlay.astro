---
interface Props {
  links: { label: string; href: string }[];
}

const { links } = Astro.props;
---

<div
  id="mobile-menu"
  class="fixed inset-0 z-40 bg-white dark:bg-gray-950 translate-x-full transition-transform duration-700 ease-[cubic-bezier(0.16,1,0.3,1)] flex flex-col md:hidden overflow-hidden"
  aria-hidden="true"
>
  <div
    class="absolute bottom-0 left-0 w-full overflow-hidden pointer-events-none opacity-[0.03] select-none"
  >
    <span
      class="block text-[25vw] font-serif italic font-black leading-none text-gray-900 dark:text-white translate-y-[10%] text-center"
    >
      Aurora
    </span>
  </div>

  <div
    class="flex-1 flex flex-col px-6 pt-24 pb-24 overflow-y-auto h-full relative z-10"
  >
    <nav class="flex flex-col w-full justify-center flex-1">
      <ul class="flex flex-col gap-4">
        {
          links.map((link, index) => (
            <li class="w-full">
              <a
                href={link.href}
                class="mobile-link group relative block py-2 w-full opacity-0 translate-y-8 transition-all duration-500 ease-out active:scale-[0.98]"
                style={`transition-delay: ${index * 100}ms`}
              >
                <div class="flex items-center justify-center relative">
                  <span class="text-4xl sm:text-6xl font-serif italic font-medium text-gray-900 dark:text-white group-active:text-yellow-600 transition-colors duration-300 text-center">
                    {link.label}
                  </span>

                  <span class="absolute left-1/2 ml-[3.5em] sm:ml-[4em] opacity-0 -translate-x-4 group-active:opacity-100 group-active:translate-x-0 transition-all duration-300">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="text-yellow-600 w-6 h-6 sm:w-8 sm:h-8"
                    >
                      <path d="M5 12h14" />
                      <path d="m12 5 7 7-7 7" />
                    </svg>
                  </span>
                </div>
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

    <div
      class="mt-8 mb-20 flex flex-col gap-10 mobile-link opacity-0 translate-y-8"
      style={`transition-delay: ${links.length * 100 + 100}ms`}
    >
      <a
        href="#contacto"
        class="w-full py-4 rounded-full border border-yellow-600 text-yellow-600 text-center text-xs font-bold uppercase tracking-[0.25em]
               transition-all duration-300
               hover:bg-yellow-600 hover:text-white
               active:bg-yellow-600 active:text-white active:scale-95"
      >
        Reservar Cita
      </a>

      <div
        class="flex justify-between items-end border-t border-gray-100 dark:border-gray-800 pt-6"
      >
        <div class="flex flex-col gap-2">
          <span
            class="text-[10px] font-bold uppercase tracking-widest text-gray-400"
            >Síguenos</span
          >
          <div class="flex gap-6 mt-1">
            <a
              href="#"
              class="text-gray-900 dark:text-white hover:text-yellow-600 transition-colors transition-transform hover:-translate-y-1 duration-300"
              aria-label="Síguenos en Instagram"
            >
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                class="fill-current w-5 h-5"
              >
                <use href="/estudio-capilar-aurora-Sprite.svg#instagram"></use>
              </svg>
            </a>
            <a
              href="#"
              class="text-gray-900 dark:text-white hover:text-yellow-600 transition-colors transition-transform hover:-translate-y-1 duration-300"
              aria-label="Síguenos en TikTok"
            >
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                class="fill-current w-5 h-5"
              >
                <use href="/estudio-capilar-aurora-Sprite.svg#tiktok"></use>
              </svg>
            </a>
            <a
              href="#"
              class="text-gray-900 dark:text-white hover:text-yellow-600 transition-colors transition-transform hover:-translate-y-1 duration-300"
              aria-label="Contáctanos por WhatsApp"
            >
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                class="fill-current w-5 h-5"
              >
                <use href="/estudio-capilar-aurora-Sprite.svg#whatsapp"></use>
              </svg>
            </a>
          </div>
        </div>

        <div class="text-right">
          <span
            class="block text-[10px] font-bold uppercase tracking-widest text-gray-400"
            >Contacto</span
          >
          <a
            href="mailto:citas@aurora.com"
            class="text-sm font-serif italic text-gray-900 dark:text-white hover:text-yellow-600 transition-colors mt-1 block"
          >
            citas@aurora.com
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
