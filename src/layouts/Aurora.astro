---
import { ClientRouter } from "astro:transitions";
import "../styles/aurora.css";
import Preloader from "../components/estudio-capilar-aurora/Preloader.astro";
import SmoothScroll from "../components/generic/SmoothScroll.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const defaultImage =
  "https://res.cloudinary.com/do5ubt5g0/image/upload/v1764818390/Gemini_Generated_Image_o1xajo1xajo1xajo_dxfkmm.png";

const optimizedImage = defaultImage.replace(
  "/upload/",
  "/upload/w_1200,h_630,c_fill,q_auto,f_jpg/"
);

const {
  title,
  description = "Estudio Capilar Aurora. Elevando el cuidado capilar a la categor√≠a de arte.",
  image = optimizedImage,
} = Astro.props;

const canonicalURL = new URL(
  Astro.url.pathname,
  Astro.site || "https://landings-three-kohl.vercel.app/aurora"
);
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/png"
      href="/favicons/aurora/favicon-96x96.png"
      sizes="96x96"
    />
    <link rel="icon" type="image/svg+xml" href="/favicons/aurora/favicon.svg" />
    <link rel="shortcut icon" href="/favicons/aurora/favicon.ico" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicons/aurora/apple-touch-icon.png"
    />
    <meta name="apple-mobile-web-app-title" content="Aurora" />
    <link rel="manifest" href="/favicons/aurora/site.webmanifest" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <meta property="og:locale" content="es_ES" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Estudio Aurora" />

    <meta property="og:image" content={image} />
    <meta property="og:image:secure_url" content={image} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:image:alt"
      content="Estudio Capilar Aurora - Experiencia Premium"
    />
    <meta property="og:image:type" content="image/jpeg" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@200;300;400;500;600&family=Tenor+Sans&display=swap"
      rel="stylesheet"
    />

    <ClientRouter />

    <style is:global>
      html,
      body {
        scroll-behavior: auto !important;
        overscroll-behavior: none;
      }

      html.lenis,
      html.lenis body {
        height: auto;
      }
      .lenis.lenis-smooth {
        scroll-behavior: auto !important;
      }
      .lenis.lenis-smooth [data-lenis-prevent] {
        overscroll-behavior: contain;
      }
      .lenis.lenis-stopped {
        overflow: hidden;
      }
    </style>
  </head>

  <body class="font-aurora-body text-gray-900 bg-white antialiased relative">
    <Preloader />

    <div
      class="fixed inset-0 z-[9999] pointer-events-none opacity-[0.05] mix-blend-plus-darker dark:mix-blend-overlay"
      style="background-image: url('data:image/svg+xml,%3Csvg viewBox=%220 0 200 200%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cfilter id=%22noiseFilter%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.8%22 numOctaves=%223%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22100%25%22 height=%22100%25%22 filter=%22url(%23noiseFilter)%22/%3E%3C/svg%3E');"
    >
    </div>

    <slot />

    <SmoothScroll offset={-90} duration={1.5} />
  </body>
</html>
